// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Setor {
  id Int @id @default(autoincrement())
  nome String
  comissao Float
  produtos Produtos[]
  vendedor Vendedor[]
}

model Produtos {
  id Int @id @default(autoincrement())
  nome String
  valor Float
  setor_id Int
  setor Setor @relation(fields: [setor_id], references: [id])
  detalhe Detalhe []
}

model Vendedor {
  id Int @id @default(autoincrement())
  nome String
  salario Float
  setor_id Int
  setor Setor @relation(fields: [setor_id], references: [id])
  vendas Vendas[]
}

model Vendas {
  id Int @id @default(autoincrement())
  data DateTime @default(now())
  id_vendedor Int
  vendedor Vendedor @relation(fields: [id_vendedor], references: [id])
  detalhe Detalhe []
}

model Detalhe {
  id Int @id @default(autoincrement())
  id_produto Int
  id_venda Int
  quantidade Int
  vendas Vendas @relation(fields: [id_venda], references: [id])
  produtos Produtos @relation(fields: [id_produto], references: [id])
}